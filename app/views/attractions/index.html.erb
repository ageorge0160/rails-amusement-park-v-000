<h1>Attractions</h1>

<%= link_to "New Attraction", new_attraction_path if current_user.admin %>

<% Attraction.all.each do |attraction| %>
  <h3><%= link_to "Show #{attraction.name}", attraction_path(attraction) if current_user.admin %></h3>
  <h3><%= link_to "Go on #{attraction.name}", attraction_path(attraction) if !current_user.admin %></h3>

<%end%>
