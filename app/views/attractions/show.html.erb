<h1><%= @attraction.name %></h1>

<%if flash[:message]%>
  <%=flash[:message]%>
<%end%>

<h4>Minimum Height: <%= @attraction.min_height %></h4>
<h4>Nausea Rating: <%= @attraction.nausea_rating %></h4>
<h4>Happiness Rating: <%= @attraction.happiness_rating %></h4>
<h4>Tickets: <%=@attraction.tickets%></h4>
<%=button_to "Go on this ride", ride_path(@attraction) if !current_user.admin %>
<%= link_to "Edit Attraction", edit_attraction_path(@attraction) if current_user.admin%>
